{
    "manifest_version": 3,
    "name": "Sentiment Analyzer",
    "version": "1.0",
    "description": "Select text, click the icon, and process it via an API",
    "permissions": ["activeTab", "storage", "contextMenus"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["http://127.0.0.1:5000/*"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }
  